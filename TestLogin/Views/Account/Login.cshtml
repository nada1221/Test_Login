@model TestLogin.Models.User

@{
	ViewData["Title"] = "Login";
}
<head>
	<style>
		.styled{
		margin-bottom:15px;
		}

		.login-form {
			width: 340px;
			margin: 50px auto;
			font-size: 15px;
		}

		.login-form form {
				margin-bottom: 15px;
				background: #f7f7f7;
				box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
				padding: 30px;
		}

		.login-form h2 {
			margin: 0 0 15px;
		}
	</style>
</head>
<body>
	<div class="login-form shadow-lg testStyle">
		@using (Html.BeginForm("Login","Account",FormMethod.Post))
		{
			<div>
				<h1>Login</h1>
			</div>
			<div class="title styled">
				<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ1QkzP-8n_ixt_CEtRc865r908Zj2Y1TmX-w&usqp=CAU"
				 style="width:100%">
			</div>
			<div class="form-group styled">
				<input type="text" class="form-control" name="ID" placeholder="ID" required="required" />
			</div>
			<div class="form-group styled">
				<input type="password" class="form-control" name="PW" placeholder="Password" required="required" />
			</div>
			<div class="form-group styled">
				<button type="submit" class="btn btn-primary btn-block" style="width:100%">로그인</button>
			</div>
			<div class="clearfix login-form-btn styled">
				<a class="btn btn-outline-primary" style="width:100%" asp-action="SignUp" asp-controller="Account">Create Account</a>
			</div>

		@ViewData["ErrorMessage"]
		}
	</div>
</body>
